<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>

    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="managementsettings.Development.json" />
    <None Remove="managementsettings.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="managementsettings.Development.json" Condition="Exists('managementsettings.Development.json')">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
